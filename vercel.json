{
    "version": 2,
    "builds": [
        {
            "src": "backend/index.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "backend/index.js"
        },
        {
            "src": "/(.*\\.(js|css|png|jpg|jpeg|gif|svg|ico|json|html|woff|woff2|ttf|eot))",
            "dest": "frontend/$1"
        },
        {
            "src": "/(.*)",
            "dest": "frontend/$1"
        }
    ],
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "backend/index.js"
        }
    ],
    "outputDirectory": "frontend"
}